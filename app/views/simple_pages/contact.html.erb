
<div class="container contact">

  <div class="row">
    <h1>Contact Us</h1>
  </div>

  <%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="row">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, :required => true, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, :required => true, class: "form-control", type:"email", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message, :required => true, class: "form-control", placeholder: "Enter Message", rows: 5 %>
    </div>
  </div>
  <%= form.submit "Send", class: "form_label" %>
  <% end %>

</div>
