<% cache product do %>
<div class="col-sm-6 col-lg-4">

  <div class="card">
    <div class="card-topper">
      <%= image_tag(product.image_url, class: "img-responsive") %>
    </div>

    <div class="card-block title">
      <h4 class="card-title"><%= link_to product.name, product%></h4>
    </div>

    <div class="card-block">
      <p class="card-text"><%= truncate(product.description, length: 130) %></p>
      <p class="card-details"><Strong>Colour: </strong><%= product.colour %></p>
      <p class="card-details"><strong>Price: </strong> Â£<%= product.price %></p>

      <% if signed_in? && current_user.admin?%>
      <div class="admin-options">
        <%= link_to 'Edit', edit_product_path(product), class: "btn" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
      </div>
      <% end %>
    </div>

  </div>

</div><!-- /col -->
<% end %>
