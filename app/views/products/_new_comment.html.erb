<% if signed_in? %>
<div class="row new-comment">
  <div class="sol-sm-12">
      <h4>Add a review:</h4>
  </div>

  <%= form_for([@product, @product.comments.build]) do |f| %>
    <div class="form-group col-sm-6">
      <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Write your comment here" %>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :rating %><br>
      <p><div class="rating"></div></p>
    </div>

    <div class="col-sm-12">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
<% end %>
