<div class="container-fluid" id="show">
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <div class="product-show-img">
        <%= image_tag(@product.image_url, class: "img-responsive") %>
      </div>
    </div>
    <div class="col-sm-4 col-xs-12 info">
        <h3><%= @product.name %></h3>
        <p><%= @product.description %></p>
        <p>
          <strong>Price: </strong>
          <%= @product.price %>
        </p>
    </div>
  </div>
  <div class="row show">
    <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
    <%= link_to 'Back', products_path, class: "btn btn-primary" %>
  </div>
</div>
