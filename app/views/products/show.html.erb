
<div class="container" id="show">

  <div class="row">

    <div class="col-sm-6 col-xs-12">
      <div class="product-show-img">
        <%= image_tag(@product.image_url, class: "img-responsive") %>
      </div>
    </div>
    <div class="col-sm-4 col-xs-12 info">
        <h3><%= @product.name %></h3>
        <p><%= @product.description %></p>
        <p><strong>Colour:</strong><%= @product.colour %></p>
        <p>
          <strong>Price: </strong>
          <%= @product.price %>
        </p>
    </div>

  </div>
  
  <p>
    <%= @product.highest_rating_comment %>
  </p>

  <div class="flex-container options">
    <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-products" %>
    <%= link_to 'Back', products_path, class: "btn btn-products" %>
  </div>
</div>
