<div class="container-fluid" id="show">

  <div class="row" data-product-id="<%= @product.id %>">
    <div class="col-sm-6 col-xs-12">
      <div class="product-show-img">
        <%= image_tag(@product.image_url, class:"img-responsive img-zoom", data_zoom_image:"@product.product_image.url") %>
      </div>
    </div>
    <div class="col-sm-6 col-xs-12 info">
      <div class="product-header">
        <h3><%= @product.name %></h3>
           <p>Average Rating:
             <span id="average-rating" class="rated" data-score="<%= @product.average_rating %>"></span>
           </p>
        <hr>

      </div>
        <p><%= @product.description %></p>
        <p><strong>Colour: </strong><%= @product.colour %></p>
        <p>
          <strong>Price: </strong>
          Â£<%= @product.price %>
        </p>
        <hr>
        <%= form_with(url: '/payments/create') do |form| %>
        <%= render partial: "shared/stripe_checkout_button" %>
        <% end %>
    </div>
  </div>

  <p><%= render 'new_comment' %></p>

  <div class="alert alert-info" style="display: none" role="alert">
    A new comment was posted!
  </div>
  <p><%= render 'comments' %></p>



  <div class="flex-container options">
    <% if signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-products" %>
      <%= link_to 'Back', products_path, class: "btn btn-products" %>
    <% end %>
  </div>

</div>
